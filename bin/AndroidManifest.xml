<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.philippschardt.hoverkeyboard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HoverActivity"
            android:label="@string/title_activity_hover" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".KeyboardActivity"
            android:label="@string/title_activity_keyboard" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.philippschardt.hoverkeyboard.HoverActivity" />
        </activity>
    </application>

</manifest>